{
  "source": "./src",
  "destination": "./doc",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "manual": {
          "globalIndex": true,
          "asset": "./manual/asset",
          "files": [
            "./manual/UserGuide.md",
            "./manual/AuthScreen.md",
            "./manual/SplashScreen.md",
            "./manual/Home.md",
            "./manual/Profile.md",
            "./manual/Money.md",
            "./manual/Graphs.md",
            "./manual/Settings.md",
            "./manual/InvestmentsCheckbox.md",
            "./manual/SaveInvestment.md",
            "./manual/Context.md",
            "./manual/components/Header.md",
            "./manual/components/Balance.md",
            "./manual/components/Menu.md",
            "./manual/components/HorizontalMenuOption.md",
            "./manual/components/HomeModal.md",
            "./manual/components/Movements.md",
            "./manual/components/MovementRegister.md",
            "./manual/components/ChangeData.md",
            "./manual/components/MoneysGraph.md",
            "./manual/components/LogoImage.md"
          ]
        }
      }
    },
    {
      "name": "esdoc-jsx-plugin",
      "option": {
        "enable": true
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin",
      "option": {
        "all": true
      }
    }
  ],
  "includes": [
    "\\.(js|jsx)$"
  ],
  "excludes": [
    "firebaseConfig.json",
    "(node_modules|docs|firebaseConfig.json|firebase.js)"
  ]
}