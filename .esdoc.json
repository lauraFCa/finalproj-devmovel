{
    "source": "./src",
    "destination": "./doc",
    "plugins": [
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "manual": {
                    "globalIndex": true,
                    "asset": "./manual/asset",
                    "files": [
                        "./manual/UserGuide.md",
                        "./manual/AuthScreen.md",
                        "./manual/Context.md",
                        "./manual/Home.md",
                        "./manual/Money.md",
                        "./manual/Profile.md",
                        "./manual/Settings.md",
                        "./manual/subscreens/resources/EventsMap.md",
                        "./manual/subscreens/resources/Graphs.md",
                        "./manual/subscreens/resources/MapLoadingScreen.md",
                        "./manual/subscreens/resources/Money.md",
                        "./manual/subscreens/resources/SeePicture.md",
                        "./manual/subscreens/ChangeProfilePic.md",
                        "./manual/subscreens/InvestmentsCheckbox.md",
                        "./manual/subscreens/SaveInvestment.md",
                        "./manual/subscreens/SplashScreen.md",
                        "./manual/subscreens/TypeOfPic.md",
                        "./manual/subscreens/UploadPic.md",
                        "./manual/subscreens/WebViewScreen.md",
                        "./manual/components/homeComponents/Balance.md",
                        "./manual/components/homeComponents/Header.md",
                        "./manual/components/homeComponents/HomeModal.md",
                        "./manual/components/homeComponents/HorizontalMenuOption.md",
                        "./manual/components/homeComponents/Menu.md",
                        "./manual/components/homeComponents/MoreOptions.md",
                        "./manual/components/homeComponents/MovementRegister.md",
                        "./manual/components/homeComponents/Movements.md",
                        "./manual/components/ChangeData.md",
                        "./manual/components/MoneysGraph.md",
                        "./manual/components/LogoImage.md",
                        "./manual/components/ArrowBack.md",
                        "./manual/components/TooltipComp.md"
                    ]
                }
            }
        },
        {
            "name": "esdoc-jsx-plugin",
            "option": {
                "enable": true
            }
        },
        {
            "name": "esdoc-ecmascript-proposal-plugin",
            "option": {
                "all": true
            }
        }
    ],
    "includes": [
        "\\.(js|jsx)$"
    ],
    "excludes": [
        "firebaseConfig.json",
        "(node_modules|docs|firebaseConfig.json|firebase.js)",
        "apiKey.json"
    ]
}